<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/layout" android:layout_width="fill_parent" android:layout_height="100dp" android:background="#2A9D8F" android:padding="5dp" android:orientation="horizontal">
    <ImageView android:layout_width="55dp" android:layout_height="55dp" android:id="@+id/image" android:layout_gravity="center" />
    <TextView android:id="@+id/title" android:layout_width="fill_parent" android:maxLines="3" android:ellipsize="end" android:layout_height="wrap_content" android:textStyle="bold" android:textColor="#FFFFFF" android:paddingLeft="10dp" android:paddingRight="15dp" android:layout_gravity="left" android:textSize="13dp" android:layout_weight="1" />
    <Button android:id="@+id/button" android:layout_height="25dp" android:layout_width="wrap_content" android:textColor="#FFFFFF" android:textSize="10sp" android:textAllCaps="false" android:background="@drawable/rounded_button_green" android:textStyle="bold" android:layout_gravity="center" />
</LinearLayout>